extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				div.text-center
					img(class='img', width='150' src='/images/login-icon.png')
					form(class='form-signin', action='/login', method='POST')
						input(type='text', name='username' class='form-control', placeholder='ایمیل', required, autofocus)
						input(type='password', name='password' class='form-control', placeholder='رمز عبور', required)
						button(class='btn btn-lg btn-primary btn-block', type='submit') ورود
						span.clearfix
				a(href='/signup', class='text-center new-account') ثبت نام
				#message
				if message
					h1.text-center.error-message #{message}